echo '开始安装依赖(npm i)'
npm i
echo '安装依赖完成，开始构建(npm run build),测试环境可以执行(npm run test)--浏览器可以查看代码映射'
npm run build
echo '前端构建完成，整理node代码(npm run copy)'
npm run clean
npm run copy
echo '代码copy完成'
cd ./ns-release-dist
echo '执行node代码压缩混淆(npm run mini)'
npm run mini
echo '启动前确保全局安装了pm2(npm i pm2 -g)'
echo '删除PM2进程'
pm2 delete all
echo '运行pm2 start start.js 启动项目'
#pm2 start ns.json
echo '查看日志'
#pm2 logs
